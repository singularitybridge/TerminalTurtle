# TerminalTurtle Environment Configuration

# Node environment: 'development' or 'production'
NODE_ENV=development

# Port for the server to listen on
PORT=8080

# Base directory for file operations
WORKING_DIRECTORY=/data/workspace

# Name for this TerminalTurtle instance
AGENT_NAME=terminal-turtle

# Ngrok Configuration
ENABLE_NGROK=false  # Set to 'true' to enable ngrok tunneling
NGROK_AUTHTOKEN=    # Your ngrok auth token (required if ENABLE_NGROK=true)

# Optional: Custom logging level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Security settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.txt,.js,.ts,.json
COMMAND_TIMEOUT=30000   # 30 seconds in milliseconds
