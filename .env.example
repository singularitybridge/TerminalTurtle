# Terminal Turtle Environment Configuration
# Copy this file to .env and fill in your values

NODE_ENV=development

# Port Configuration
TURTLE_API_PORT=8080        # Terminal Turtle control API
APP_PORT=8180              # Your application port
EDITOR_PORT=9513           # VS Code web editor port

# Core Configuration
WORKING_DIRECTORY=/data/workspace
AGENT_NAME=terminal-turtle-dev

# Authentication (generate with: openssl rand -hex 32)
TURTLE_API_KEY=

# AI Agent Configuration (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Project Configuration
PROJECT_TEMPLATE=vite      # Options: vite, react, express
AUTO_START_DEV_SERVER=true